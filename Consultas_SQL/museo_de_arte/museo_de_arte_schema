CREATE TABLE IF NOT EXISTS museo_de_arte (
    id_artista INT comment 'ID único para artistas individuales',
    id_museo_de_arte INT comment 'ID único para museos de arte individuales dentro de la misma región',
    nombre_artista VARCHAR (255) comment 'el nombre de cada artista',
    categoria_arte VARCHAR (255) comment 'tipo de arte que fue comprado (pintura al óleo, cerámica, vidrio, textil, etc.)',
    nombre_pais VARCHAR (255) comment 'país de origen asociado con la pintura',
    fecha_coleccion_arte DATE comment 'fecha en que las pinturas fueron recolectadas',
    cantidad_cerámica BIGINT comment 'número de artículos de cerámica comprados durante el mes',
    año_compra VARCHAR (255) comment 'año en que la pieza de arte fue comprada',
    mes_compra VARCHAR (255) comment 'mes en que la pieza de arte fue comprada',
    no_seleccionado BIGINT comment 'número de piezas de arte que no fueron seleccionadas para la exhibición actual',
    seleccionado BIGINT comment 'número de piezas de arte que fueron seleccionadas para la exhibición actual',
    id_tipo_seleccion INT comment 'ID único asignado al tipo de selección',
    seleccionado_futuro BIGINT comment 'número de piezas de arte seleccionadas anticipadamente para futuras exhibiciones',
    no_seleccionado_futuro BIGINT comment 'número de piezas de arte no seleccionadas anticipadamente para futuras exhibiciones'
);

